@model IEnumerable<ContractApprovalSystem.Services.DTOs.ContractDto>

@{
    ViewData["Title"] = "My Contracts";
    var userRole = ViewData["UserRole"]?.ToString() ?? string.Empty;
}

<div class="row mb-3">
    <div class="col">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col text-end">
        @if (!string.Equals(userRole, "Manager", StringComparison.OrdinalIgnoreCase))
        {
            <a asp-controller="Contracts" asp-action="Create" class="btn btn-primary">
                Create New Contract
            </a>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You don't have any contracts yet.
        @if (!string.Equals(userRole, "Manager", StringComparison.OrdinalIgnoreCase))
        {
            <text>Click <strong>Create New Contract</strong> to add your first one.</text>
        }
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th class="text-end">Amount</th>
                <th>Status</th>
                <th>Created Date</th>
                <th style="width:260px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in Model)
        {
            var badgeClass = c.Status switch
            {
                "Draft"           => "secondary",
                "PendingApproval" => "warning",
                "Approved"        => "success",
                "Rejected"        => "danger",
                _                 => "secondary"
            };

            <tr>
                <td>@c.Title</td>
                <td>@c.Description</td>
                <td class="text-end">@c.Amount.ToString("C")</td>
                <td>
                    <span class="badge bg-@badgeClass">@c.Status</span>
                </td>
                <td>@c.CreatedDate.ToString("dd MMM yyyy")</td>
                <td>
                    <a asp-controller="Contracts"
                       asp-action="Details"
                       asp-route-id="@c.Id"
                       class="btn btn-sm btn-info me-1">
                        View
                    </a>

                    @if (!userRole.Equals("Manager", StringComparison.OrdinalIgnoreCase) && c.Status == "Draft")
                    {
                        <a asp-controller="Contracts"
                           asp-action="Edit"
                           asp-route-id="@c.Id"
                           class="btn btn-sm btn-warning me-1">
                            Edit
                        </a>

                        <form asp-controller="Contracts"
                              asp-action="Submit"
                              asp-route-id="@c.Id"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-sm btn-success me-1"
                                    onclick="return confirm('Submit for approval?');">
                                Submit
                            </button>
                        </form>

                        <form asp-controller="Contracts"
                              asp-action="Delete"
                              asp-route-id="@c.Id"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-sm btn-danger"
                                    onclick="return confirm('Delete this contract?');">
                                Delete
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
