@model IEnumerable<ContractApprovalSystem.Services.DTOs.ContractDto>

@{
    ViewData["Title"] = "Pending Approvals";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        There are no contracts pending approval at this time.
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle mt-3">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th class="text-end">Amount</th>
                <th>Submitted By</th>
                <th>Submitted Date</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Title</td>
                <td>@c.Description</td>
                <td class="text-end">@c.Amount.ToString("C")</td>
                <td>@c.CreatorName</td>
                <td>@c.SubmittedDate?.ToString("dd MMM yyyy")</td>
                <td>
                    <form asp-action="Approve" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="contractId" value="@c.Id" />
                        <input type="hidden" name="comments" value="" />
                        <button type="submit" class="btn btn-sm btn-success me-1">
                            Approve
                        </button>
                    </form>

                    <form asp-action="Reject" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="contractId" value="@c.Id" />
                        <input type="hidden" name="comments" value="" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Reject
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
